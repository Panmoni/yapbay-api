{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src"],
    "types": ["mocha", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "docs", "src/contracts/solana/tests.ts", "src/celo.ts"]
}
