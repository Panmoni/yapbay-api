{
  "name": "yapbay-api",
  "version": "0.2.0",
  "main": "dist/server.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "mocha",
    "test:blockchain": "mocha -r ts-node/register 'src/tests/blockchain.test.ts'",
    "test:deadline": "ts-node scripts/test-deadline.ts",
    "test:connection": "ts-node scripts/test-connection.ts",
    "test:escrow-monitoring": "ts-node scripts/test-escrow-monitoring.ts",
    "start": "ts-node src/server.ts",
    "start:events": "ts-node scripts/start-event-listener.ts",
    "start:dev": "nodemon --exec 'ts-node --project tsconfig.json --files' src/server.ts",
    "build": "tsc",
    "serve": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "test-events": "ts-node scripts/test-events.ts",
    "list-active-trades": "ts-node scripts/list-active-trades.ts",
    "build-image": "podman build -f Containerfile -t localhost/yapbay-api:latest .",
    "build-image:yarn": "podman build -f Containerfile.yarn -t localhost/yapbay-api:latest .",
    "deploy": "npm run build && npm run build-image && systemctl --user restart yapbay-api-pod.service && systemctl --user restart yapbay-api.service",
    "logs": "journalctl --user -u yapbay-api.service -f",
    "start:service": "systemctl --user start yapbay-api-pod.service yapbay-api.service",
    "stop": "systemctl --user stop yapbay-api-pod.service yapbay-api.service",
    "stop-pod": "podman pod stop yapbay-api",
    "restart": "systemctl --user restart yapbay-api-pod.service && systemctl --user restart yapbay-api.service",
    "status": "systemctl --user status yapbay-api-pod.service yapbay-api.service --no-pager",
    "clean": "podman pod stop yapbay-api && podman pod rm -f yapbay-api"
  },
  "author": "",
  "license": "MIT",
  "description": "API for YapBay Escrow on Celo Alfajores testnet",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.19",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mocha": "^10.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.10",
    "@types/pg": "^8.11.12",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "chai": "^4.5.0",
    "eslint": "^9.24.0",
    "mocha": "^11.1.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.31.0"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@solana/spl-token": "^0.1.8",
    "@solana/web3.js": "^1.98.0",
    "@types/node-cron": "^3.0.11",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "ethers": "^6.13.5",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "express-jwt": "^8.5.1",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "pg": "^8.14.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
